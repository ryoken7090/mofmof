<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>
      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group">
      <%= form.label :建物名 %>
      <%= form.text_field :name %>
    </div>
    <div class="form-group">
      <%= form.label :家賃 %>
      <%= form.text_field :rent %>
    </div>
    <div class="form-group">
      <%= form.label :住所 %>
      <%= form.text_field :address %>
    </div>
    <div class="form-group">
      <%= form.label :築年数 %>
      <%= form.text_field :age %>
    </div>
    <div class="form-group">
      <%= form.label :備考 %>
      <%= form.text_field :comment %>
    </div>
  <%= form.fields_for :stations do |f| %>
    <div class="form-group">
      <%= f.label :最寄り駅 %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :路線名 %>
      <%= f.text_field :route %>
    </div>
    <div class="form-group">
      <%= f.label :駅までの距離 %>
      <%= f.text_field :distance %>
    </div>
  <% end %>
    <%= form.submit %>
  </div>
<% end %>
